{% extends 'admin/base_admin.html.twig' %}

{% block title %}Symfsino - Utilisateur ({{ utilisateur.pseudo }}){% endblock %}

{% block admin_content %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ utilisateur.pseudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_utilisateur_index') }}">back to list</a>

    <a href="{{ path('app_admin_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>

    {{ include('admin/utilisateur/_delete_form.html.twig') }}
{% endblock %}
