{% extends 'base.html.twig' %}

{% block body %}
    {# Header commun (navbar Bootstrap) #}
    <header class="p-3 mb-3 border-bottom bg-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                {# Logo / marque (non cliquable pour l’instant) #}
                <span class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none fs-5 fw-bold">
                    Symfsino
                  </span>

                {# Liens de navigation (non cliquables pour l’instant) #}
                <ul class="nav me-auto mb-2 mb-lg-0 ms-3">
                    <li class="nav-item">
                        <span class="nav-link px-2 link-dark">Accueil</span>
                    </li>
                </ul>

                {# Zone compte #}
                {% if app.user %}
                    <div class="dropdown text-end">
                        <a href="#" class="d-inline-flex align-items-center link-dark text-decoration-none dropdown-toggle"
                           id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://i.pinimg.com/1200x/54/f4/b5/54f4b55a59ff9ddf2a2655c7f35e4356.jpg" alt="avatar" width="32" height="32" class="rounded-circle me-2">
                            <span class="me-2">{{ app.user.pseudo ?? app.user.email }}</span>
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="badge bg-danger">Admin</span>
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUser1">
                            <li><span class="dropdown-item-text"><strong>{{ app.user.email }}</strong></span></li>
                            <li><hr class="dropdown-divider"></li>
                            {# Éléments non cliquables pour l’instant #}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li><a class="dropdown-item-text" href="{{ path("app_dashboard") }}">Backoffice</a></li>
                            {% endif %}
                            <li><a class="dropdown-item-text">Profil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        </ul>
                    </div>
                {% else %}
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-primary" type="button" href="{{ path("app_login") }}">Se connecter</a>
                        <a class="btn btn-primary" type="button" href="{{  path("app_register") }}">Créer un compte</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>

    <div class="container">
        {# Flashs centralisés (success/error) #}
        {% for msg in app.flashes('success') %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
        {% for msg in app.flashes('error') %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}

        {# Contenu spécifique de chaque page front #}

        {% block page_content %}{% endblock %}
    </div>
{% endblock %}
